#ifndef Histoire_h
#define Histoire_h

#include <stdio.h>
#include <iostream>
#include <vector>
#include <fstream>
#include <stdlib.h>

#include "split.h"
#include "Utilisateur.hpp"

class Histoire {

public:
	Histoire(Utilisateur*);
	virtual ~Histoire();

	int lire_fichier(std::string);

	bool demander_objet(std::string);
	void ajouter_objet(std::string);

	std::vector<std::string> analyse_fichier();
	void actions();

	void affiche_texte();
	void affiche_texte_cache();
	void affiche();

	void combatre();
	bool discuter();

	void clear_textes();

private:
	Utilisateur *utilisateur;

	int combat;
	int discussion;
	bool ObjetUse;

	split<std::string> split;

